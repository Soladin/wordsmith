<%= form_for(@wordset) do |f| %>

  <div class="field">
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :url, "URL" %>
    <%= f.text_field :url %>
  </p>

  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 3 %>
  </p>
  </div>

  <%= f.fields_for :words do |builder| %>
    <fieldset>
      <%= builder.label :content, "Term" %><br />
      <%= builder.text_area :content %><br />
      <%= builder.check_box :_destroy %>
      <%= builder.label :_destroy, "Remove Word" %>
      <!-- Obviously gonna need a "Definition" field in here too -->
    </fieldset>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>